{
  "manifest_version": 3,
  "name": "Google Authenticator Extension",
  "version": "1.0.0",
  "description": "一个支持二维码扫描和密钥导入的Google身份验证器Chrome插件",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "camera",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Authenticator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}